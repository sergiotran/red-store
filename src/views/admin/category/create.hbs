<div class='panel'>
  <div class='panel-header'>
    <h2 class='panel-title'>{{title}}</h2>
    <div class='panel-actions'>
      <a href='/_/admin/category' class='panel-action-item important-action'><i
          class='fa-solid fa-arrow-left'
        ></i>
        Quay lại</a>
      <a class='panel-action-item' data-submit-target='#hidden-submit-btn'><i
          class='fa-solid fa-floppy-disk'
        ></i>
        Tạo</a>
    </div>
  </div>
  <div class='panel-content'>
    <form
      class='panel-form'
      method='post'
      action='/_/admin/apis/category/new'
      data-redirect='/_/admin/category'
    >
      <div class='panel-form-group'>
        <label for='name'>Tên chuyên mục</label>
        <input
          id='name'
          name='category_name'
          type='text'
          required
          placeholder='Tiêu để chuyên mục'
          value='{{category.category_name}}'
          class='panel-form-input'
        />
      </div>
      <div class='panel-form-group'>
        <label for='description'>Mô tả</label>
        <textarea
          id='description'
          name='category_description'
          placeholder='Mô tả chuyên mục'
          class='panel-form-textarea'
        >{{category.category_description}}</textarea>
      </div>
      <input type='hidden' name='_method' value='patch' />
      <input type='submit' id='hidden-submit-btn' style='display: none' />
    </form>
  </div>
</div>