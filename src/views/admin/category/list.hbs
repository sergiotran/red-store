<div class='panel'>
  <div class='panel-header'>
    <h2 class='panel-title'>{{title}}</h2>
    <div class='panel-actions'>
      <a href='/_/admin/category/new' class='panel-action-item'><i
          class='fa-solid fa-file-circle-plus'
        ></i>
        Thêm</a>
      <form class='category-search-box' method='get' action='/_/admin/category'>
        <input
          type='text'
          name='q'
          placeholder='Tìm kiếm theo tên hoặc id...'
          required
          value='{{searchQuery}}'
        />
        <button type='submit'><i
            class='fa-solid fa-magnifying-glass'
          ></i></button>
      </form>
      {{#if searchQuery.length}}
        <a
          href='/_/admin/category'
          class='panel-action-item important-action'
        ><i class='fa-solid fa-arrow-left'></i></a>
      {{/if}}
    </div>
  </div>
  <div class='panel-content'>
    <table class='panel-table'>
      <thead>
        <th style='white-space: nowrap;width: 150px'>ID</th>
        <th>Tên chuyên mục</th>
        <th>Mô tả</th>
        <th style='white-space: nowrap;width: 150px'>Hành động</th>
      </thead>
      <tbody>
        {{#if categories.length}}
          {{#each categories}}
            <tr>
              <td>{{this.category_id}}</td>
              <td>{{this.category_name}}</td>
              <td>
                {{#if this.category_description}}
                  {{this.category_description}}
                {{else}}
                  N/A
                {{/if}}
              </td>
              <td class='action-col'>
                <a
                  class='item-action item-action-edit'
                  data-id='{{this.category_id}}'
                  href='/_/admin/category/{{this.category_id}}'
                ><i class='fa-solid fa-pencil'></i></a>
                <a
                  class='item-action item-action-remove'
                  data-remove-id='{{this.category_id}}'
                  data-remove-url='/_/admin/apis/category/{{this.category_id}}'
                ><i class='fa-solid fa-trash'></i></a>
              </td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan='4'>Không có dữ liệu</td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>